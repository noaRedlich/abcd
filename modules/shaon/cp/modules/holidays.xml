<?xml version="1.0" encoding="utf-8"?>
<xml>
	<main_table>holidays</main_table>
	<name>#holidays#</name>
	<options>
		<opt name="create_record" type="always"></opt>
		<opt name="search" type="sometimes"></opt>
		<opt name="main_view" type="always"></opt>
		<opt name="delete_record" type="always"></opt>
	</options> 
	<view>
		<vcol name="day" type="date">#date_of_the_holiday#</vcol>
		<vcol name="Name">#holiday_name#</vcol>
	</view>
	<edit>
		<ecol name="day" type="date">#holiday_date_ddmmyyyy#</ecol>
		<ecol name="Name"  type="string">#where_holiday#</ecol>
	</edit>
	<sql_actions>
		<opt name="order" val="day"></opt>
		<opt name="search_by" val="day,Name"></opt>
	</sql_actions>
</xml>
