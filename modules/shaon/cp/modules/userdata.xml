<xml>
	<main_table>userdata</main_table>
	<name>#users_pref#</name>
	<options>
		<opt name="create_record" type="none"></opt>
		<opt name="search" type="always"></opt>
		<opt name="main_view" type="always"></opt>
		<opt name="delete_record" type="none"></opt>
	</options>
	<view>
		<vcol name="UserName" >#username#</vcol>
	</view>
	<edit>
		<ecol name="WorkingHoursPerDay" type="string">#normal_working_hours_on_weekdays#</ecol>
		<ecol name="WorkingHoursFriday" type="string">#normal_working_hours_on_fridays_and_holiday_eves#</ecol>
		<ecol name="AddHoursPercentage1" type="string">#first_overtime_hours_salary#</ecol>
		<ecol name="NumAddHours" type="string">#number_of_overtime_hours_first#</ecol>
		<ecol name="AddHoursPercentage2" type="string">#overtime_pay_after_the_first_hours#</ecol>
		<ecol name="HolidayPercentage" type="string">#salary_holidays_and_weekends#</ecol>
		HolidayPercentage
		<ecol name="email" type="string">#user_email#</ecol>
		<ecol name="faxmail" type="string">#fax_mail#</ecol>
		
	</edit>
	<sql_actions>
		<opt name="order" val="UserName"></opt>
		<opt name="search_by" type="UserName"></opt>
	</sql_actions>
</xml>
