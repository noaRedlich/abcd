function decodeToDOSHeb($str){
	$s = "";
	for($i=0;$i<strlen($str);$i++){
		if (ord($str[$i])>=224 && ord($str[$i])<=250){
			$s.=chr(ord($str[$i])-96);
		}
		else{
			$s.=$str[$i];
		}
	}
	return $s;
}
