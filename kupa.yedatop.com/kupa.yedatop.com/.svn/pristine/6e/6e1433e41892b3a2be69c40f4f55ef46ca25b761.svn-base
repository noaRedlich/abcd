<xml>
	<main_table>dt_faq</main_table>
	<name>FAQ Topics</name>
	<options>
		<opt name="create_record" type="sometimes"></opt>
		<opt name="search" type="sometimes"></opt>
		<opt name="main_view" type="always"></opt>
	</options>
	<view>
		<vcol name="bd_counter">#</vcol>
		<vcol name="name_eng">Topic (eng)</vcol>
		<vcol name="name_rus">Topic (rus)</vcol>
		<vcol name="name_heb">Topic (heb)</vcol>
		<vcol name="show_it" type="yes_no">Show on Site</vcol>
	</view>
	<edit>
		<ecol name="name" type="string">Name (eng)</ecol>
		<ecol name="name_rus"  type="string">Name (rus)</ecol>
		<ecol name="name_heb"  type="string">Name (heb)</ecol>
		<ecol name="show_it" type="yes_no">Show on Site</ecol>
	</edit>
	<sql_actions>
		<opt name="order" val="name_eng"></opt>
		<opt name="search_by" type="name_eng"></opt>
	</sql_actions>
</xml>
