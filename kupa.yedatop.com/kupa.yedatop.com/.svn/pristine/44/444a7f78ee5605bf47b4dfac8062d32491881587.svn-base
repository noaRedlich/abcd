<?xml version="1.0" encoding="windows-1255"?>
<xml>
	<main_table>kupot</main_table>
	<name>קופות</name>
	<options>
		<opt name="create_record" type="sometime"></opt>
		<opt name="edit_record" type="sometime"></opt>
		<opt name="search" type="none"></opt>
		<opt name="view" type="always"></opt>
		<opt name="delete_record" type="none"></opt>
	</options>
	<view>
        <vcol name="SortOrder">#</vcol>
		<vcol name="kupacode">קוד</vcol>
		<vcol name="name">שם קופה</vcol>
        <vcol name="status" type="yes_no">פעיל</vcol>
	</view>
	<edit>
		<ecol name="name" type="string">שם קופה</ecol>
		<ecol name="kupacode" type="string">קוד</ecol>
		<ecol name="description" type="text">תאור קופה</ecol>
    <ecol name="account_id" type="string" check="unique" message="חשבון חיצוני זה כבר קיים במערכת">מספר חשבון הנה''ח חיצוני</ecol>
    <ecol name="bank" type="string">מס' בנק</ecol> 
		<ecol name="snif" type="string">מס' סניף</ecol>
		<ecol name="account" type="string">מס' חשבון</ecol>
        <ecol name="status" type="yes_no" defaultvalue="1">פעיל</ecol>
        <ecol name="SortOrder" type="string">מיקום</ecol>
	</edit>
	<sql_actions>
		<opt name="order" val="SortOrder"></opt>
	</sql_actions>
</xml>