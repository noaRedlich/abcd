    function reverse ($str){
        $arr = explode(" ",$str);
        for($i=0;$i<count($arr);$i++){
            if (!preg_match("/^[0-9\%\.\-\,\a-zA-Z\}\{\)\( ]*$/",$arr[$i]))
            {
            $arr[$i] = strrev($arr[$i]);
            }
        }
        $arr = array_reverse($arr,true);
        $out = implode(" ",$arr);
        return $out;
    }




