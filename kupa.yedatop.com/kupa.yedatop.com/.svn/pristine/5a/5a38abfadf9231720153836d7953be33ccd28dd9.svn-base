        $cnt=0;
        $productidsarr = explode(",",$selectedids);
        $orderstr = "case l.id ";
        foreach ($productidsarr as $productid)
        {
            $orderstr.=" when $productid then ".($cnt++);
        }
        $orderstr.=" end";
        
		if ($selectedids)
