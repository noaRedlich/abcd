function GetElementByName ($xml, $start, $end) {
	global $pos;
	$startpos = strpos($xml, $start);
	if ($startpos === false) {
		return false;
	}
	$endpos = strpos($xml, $end);
	$endpos = $endpos+strlen($end); 
	$pos = $endpos;
	$endpos = $endpos-$startpos;
	$endpos = $endpos - strlen($end);
	$tag = substr ($xml, $startpos, $endpos);
	$tag = substr ($tag, strlen($start));
	return $tag;
}
