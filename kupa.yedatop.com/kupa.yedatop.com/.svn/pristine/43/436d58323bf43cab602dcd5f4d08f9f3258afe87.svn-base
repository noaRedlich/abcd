function DecodeString($s,$length)
{
	global $noreverse; 
	$key = decodeToDOSHeb($s,"",$noreverse);
	if ($key!=intval($key).""){$key=strrev($key);};
	if ($length)
	{
		$key = substr($key,0,$length);
	}
	return $key;		
}

