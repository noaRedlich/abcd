/* MAIN STYLES */
BODY.admin {
	margin-top: 0px;
	margin-left: 0px;
	font-family: Arial,Helvetica,sans-serif;
	background-color: #FFFFFF;
	font-size:10pt;
	font-size:10pt
}

BODY {
	position:absolute;
	top:0px;
	left:0px;
	margin:0px;
	padding:0px;
	margin-top: 0px;
	margin-left: 0px;
	font-family: Arial,Helvetica,sans-serif;
	background-color: #FFFFFF;
	font-size:10pt

}

h1, h2 {
	font-family: Arial,Helvetica,sans-serif;
	text-align: left;
}

h3, h4 {
	font-family: Arial,Helvetica,sans-serif;
	font-size:14pt
}

h5, h6 {
	font-family: Arial,Helvetica,sans-serif;
	text-align: Left;
	margin-left: 35px;
}

P,a,b,body,td {
	font-family: Arial, Helvetica, sans-serif;
	font-size:10pt
}
li {
	font-family: Arial, Helvetica, sans-serif;
}



a:link,a:active,a:visited { color : #006699; }
a:hover		{ text-decoration: underline; color : #DD6900; }
hr	{ height: 0px; border: solid #000000 1px; border-top-width: 1px;}

/* TABLE STYLES Main Page Color*/
table.form_main { abackground-color: #FFFFFF; }
td.form_main { abackground-color: #FFFFFF; }
/* NEW TABLE STYLE FOR Vertical Layout Control Secondary Layout Color(Light Blue)*/
table.color2_layout { background-color: #a6b3cf; }
td.color2_layout { background-color: #a6b3cf; }

/* for alternating listings in the admin area*/
td.row1_0	{ background-color: #009900; }
td.row2_0	{ background-color: #CCFFCC; }
td.row3_0	{ cursor:default; border-bottom:solid 1 gray; border-left:solid 1 gray}
.adminListingLeft_0 {
color: #FFFFFF;
background-color : transparent;
}

td.row1_1	{ background-color: #006699; }
td.row2_1	{ background-color: #DEE3E7; }
td.row3_1	{ cursor:default; border-bottom:solid 1 gray; border-left:solid 1 gray}
.adminListingLeft_1 {
color: #FFFFFF;
background-color : transparent;
}

/* for alternating image listings */
td.image_row_0	{ background-color: #D6D3EE; }
td.image_row_1	{ background-color: #FFFFFF; }

/* for alternating search result listings */
td.search_row_0	{ border-bottom:solid 1 silver}
td.search_row_1	{ border-bottom:solid 1 silver}

td.row_main{ }

/* FORM STYLES */
INPUT, select, textarea, text {
font-family: Arial, Helvetica, sans-serif; 
font-size: 10pt;
color: #000000;
}


/* TEXT STYLES */
.small { font-size : 10px; color : #ffffff;}

.required {
color: #FF0000;
background-color : transparent;
}

.lightText {
color: #FFFFFF;
background-color : transparent;
}


/* TEMPLATE EDITOR STYLES */
td.templateEditorHead	{ background-color: #D6D3EE; }
td.templateEditorNew	{ background-color: #EEEEFF; }

.selected {
background-color: darkblue;
color:white;
}


.buttonmenu{
	border: outset 1;
	background-color:#99cccc;
	font-weight:bold;
	
}

.buttonmenuselected{
	border: outset 1;
	background-color:#ffffcc;
	font-weight:bold;
	
}

.mo{
	background-color:#ffffcc;
}

a.gridtitlelink,a.gridtitlelink:visited,a.gridtitlelink:hover
{color:white;text-decoration:underline} 

.alert
{
	position: absolute;
	top: 0px;
	left: 100px;
	background-color: Red;
	border: solid 3px yellow;
	padding: 5px;
	border-top: none;
	color: White !important;
	font-weight: BOLD;
	width:500px;
	text-align:center;
}

.alert a, .alert a:visited, .alert a:hover
{
	color:Yellow;
	text-decoration:underline;
	font-weight:bold !important;
}
