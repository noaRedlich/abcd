<script>

function checkOK()
{
	for(i=0;i<document.all("selector").length;i++)
	{
		if (document.all("selector")[i].checked)
		{
			document.all.btnOK.disabled = false;
			return;
		}
	}
	document.all.btnOK.disabled = true;
	
}

function selectZ()
{
	var s = "";
	for(i=0;i<document.all("selector").length;i++)
	{
		if (document.all("selector")[i].checked)
		{
			s+=","+document.all("selector")[i].zedId;
		}
	}	
	if (s!="")
	{
		s = s.substring(1);
	}
	window.returnValue = s;
	window.close();
}

checkOK();
</script>

