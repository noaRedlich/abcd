<xml>
	<main_table>dt_characters</main_table>
	<name>Characters</name>
	<options>
		<opt name="create_record" type="always"></opt>
		<opt name="search" type="sometimes"></opt>
		<opt name="main_view" type="always"></opt>
	</options>
	<view>
		<vcol name="bd_counter">#</vcol>
		<vcol name="name_eng">Eng</vcol>
		<vcol name="name_rus">Rus</vcol>
		<vcol name="name_heb">Heb</vcol>
	</view>
	<edit>
		<ecol name="name_eng" type="string">Eng</ecol>
		<ecol name="name_heb" type="string">Heb</ecol>
		<ecol name="name_rus" type="string">Rus</ecol>
		<ecol name="sign" type="enum">Sign
			<enum val="1">Телец</enum>
			<enum val="2">Близнецы</enum>
			<enum val="3">Рак</enum>
			<enum val="4">Лев</enum>
			<enum val="5">Дева</enum>
			<enum val="6">Весы</enum>
			<enum val="7">Скорпион</enum>
			<enum val="8">Стрелец</enum>
			<enum val="9">Козерог</enum>
			<enum val="10">Водолей</enum>
			<enum val="11">Рыбы</enum>
			<enum val="12">Овен</enum>
		</ecol>
	</edit>
	<sql_actions>
		<opt name="order" val="sign"></opt>
		<opt name="order" val="name_eng"></opt>
		<opt name="search_by" type="sign"></opt>
	</sql_actions>
</xml>
